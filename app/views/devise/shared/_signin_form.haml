= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  %fieldset.form-group
    = f.input :email, label: false, autofocus: true, class: 'form-control', placeholder: "Email"
  %fieldset.form-group
    = f.input :password, label: false, autocomplete: "off", class: 'form-control', placeholder: "Password"
  - if devise_mapping.rememberable?
    .checkbox
      %label{for: 'remember_me'}
        = f.check_box :remember_me
        Stay signed in
  .actions
    = f.submit "Sign in", class: 'btn btn-primary btn-block'
