gem 'bourbon'

# Stripe stuff
gem 'stripe'
gem 'stripe_event', '~> 1.5'
gem 'receipts'

# Never actually delete some things
gem 'paranoia', '~> 2.2.0.pre'

# Awesome upload to S3 directly
